<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/personal_rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:fitsSystemWindows="true">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark">


                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/img_user"
                    android:layout_width="80dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/frgment_login_24dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/photo" />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/str_user_sign"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_user"
                    android:layout_marginLeft="@dimen/frgment_login_16dp"
                    android:layout_marginRight="@dimen/frgment_login_16dp"
                    android:layout_marginTop="@dimen/common_8dp"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="@string/str_user_sign"
                    android:textColor="@color/tab_bgcolor"
                    android:textSize="@dimen/fragment_font_14sp" />

                <LinearLayout
                    android:layout_marginTop="@dimen/frgment_login_24dp"
                    android:layout_below="@id/str_user_sign"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="@dimen/commen_0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="喜欢"
                        android:drawableTop="@drawable/ic_love_person"
                        android:textColor="@color/tab_bgcolor"
                        android:textSize="@dimen/fragment_font_14sp" />

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="@dimen/commen_0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textColor="@color/tab_bgcolor"
                        android:drawableTop="@drawable/ic_love_person"
                        android:text="关注"
                        android:textSize="@dimen/fragment_font_14sp" />

                    <android.support.v7.widget.AppCompatTextView
                        android:layout_width="@dimen/commen_0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textColor="@color/tab_bgcolor"
                        android:drawableTop="@drawable/ic_love_person"
                        android:text="足迹"
                        android:textSize="@dimen/fragment_font_14sp" />

                </LinearLayout>


            </RelativeLayout>




        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


    <android.support.v7.widget.Toolbar
        android:id="@+id/class_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/personal_toobar_bg" >

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_love_person"
            android:layout_gravity="left"
            />
        <android.support.v7.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/frgment_login_16dp"
            android:src="@drawable/ic_love_person"/>
        </android.support.v7.widget.Toolbar>


</android.support.design.widget.CoordinatorLayout>