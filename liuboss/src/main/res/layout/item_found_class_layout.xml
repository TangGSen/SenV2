<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    app:cardCornerRadius="2dp"
    app:elevation="1dp">

    <RelativeLayout
        android:id="@+id/base_swipe_item_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="5dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/item_imageview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/item_des_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_imageview"
            android:layout_marginTop="@dimen/frgment_login_4dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textSize="@dimen/fragment_font_14sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/item_txt_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_des_text"
            android:layout_marginTop="@dimen/frgment_login_4dp"
            android:ellipsize="end"
            android:gravity="left"
            android:textColor="@color/common_orange_pressed_color"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textSize="@dimen/fragment_font_14sp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/item_txt_love"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_des_text"
            android:layout_marginTop="@dimen/frgment_login_4dp"
            android:ellipsize="end"
            android:gravity="right"
            android:textColor="@color/common_orange_pressed_color"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textSize="@dimen/fragment_font_14sp" />
    </RelativeLayout>


</android.support.v7.widget.CardView>