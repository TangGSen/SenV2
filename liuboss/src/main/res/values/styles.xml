<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">

    </style>
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActivityTheme.Base" parent="AppTheme.Base">

        <item name="colorAccent">@color/colorPrimaryDark</item>

    </style>

    <style name="MyCustomerToolbar" parent="Theme.AppCompat.Light">
        <item name="android:textColorPrimary">@color/textActionBarTile</item>
    </style>


    <!--MainActivity Tablayout style-->
  <style name="TabLayout" parent="Widget.Design.TabLayout">
    <item name="tabIndicatorColor">?attr/colorAccent</item>
    <item name="tabIndicatorHeight">0dp</item>
    <item name="tabPaddingStart">12dp</item>
    <item name="tabPaddingEnd">12dp</item>
    <item name="tabBackground">@color/half_transparent</item>
    <item name="tabSelectedTextColor">?android:textColorPrimary</item>
</style>


</resources>
