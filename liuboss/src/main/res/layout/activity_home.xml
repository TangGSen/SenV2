<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/frgment_login_24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sen.activity.HomeActivity">
    <include
        android:id="@+id/app_bar"
        layout="@layout/content_app_bar" />
    <com.sen.widget.NoSwitchingViewPager
        android:id="@+id/viewPager_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none" />

    <android.support.design.widget.TabLayout
        android:id="@+id/layout_buttom_tab"
        style="@style/HomeTabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_tab_dimens"
        android:background="@color/tab_bgcolor" />


</LinearLayout>
